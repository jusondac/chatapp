<div class="w-full h-full flex items-center justify-center flex-col">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex gap-3 flex-col">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class:'bg-gray-800 rounded-full' %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class:'bg-gray-800 rounded-full' %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
