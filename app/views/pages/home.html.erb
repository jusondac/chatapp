<div class="flex flex-col h-screen text-white items-center justify-center w-full">
  <h1 class="font-bold text-6xl">Whatsapp</h1>
  <div class="flex gap-5">
    <% if current_user %>
      <div class="flex flex-col gap-3 items-center">
        <div class="flex gap-5">
        <%= image_tag(current_user.avatar_thumbnail, class:'h-10 w-10 rounded-full border-solid border-2 border-green-400 p-1') %>
        <%= link_to "Go Chatting", rooms_path, class:'p-2 px-3 bg-gray-800 rounded-xl text-gray-400' %>
        </div>
        <div class="flex gap-5 rounded-xl bg-gray-800 p-2 shadow-xl">
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class:'p-2 px-3 bg-gray-900 text-gray-400 rounded-xl' %>
        <%= link_to "Edit Account", edit_user_registration_path, class:'p-2 px-3 bg-gray-900 text-gray-400 rounded-xl' %>
        </div>
      </div>
    <% else %>
      <%= link_to "Login", new_user_session_path, class:'bg-gray-800 p-2 px-3 rounded-full text-gray-400'%>
      <%= link_to "Sign Up", new_user_registration_path, class:'bg-gray-800 p-2 px-3 rounded-full text-gray-400'%>
    <% end %>
  </div>
</div>
